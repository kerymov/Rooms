<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Rooms" parent="android:Theme.Material.Light.NoActionBar" >
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    <style name="Theme.Rooms.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.SplashScreen</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>